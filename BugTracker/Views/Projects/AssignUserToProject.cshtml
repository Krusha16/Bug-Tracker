
@{
    ViewBag.Title = "AssignUserToProject";
}

<h2>AssignUserToProject</h2>

@using (Html.BeginForm())
{
    <br />
    <p><b>Select User: </b> @Html.DropDownList("UserId") </p>
    <br />
    <p><b>Select Project: </b> @Html.DropDownList("projectId") </p>
