@model IEnumerable<BugTracker.Models.TicketHistory>

@{
    ViewBag.Title = "Histories";
}

<h2>Histories</h2>

<div class="">
    <button class="submitButton" type="button">
        <p class="link">
            @Html.ActionLink("Create New", "Create", null, new { style = "color: white;text-decoration:none" })
        </p>
    </button>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Property)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OldValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NewValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Changed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Property)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Changed)
            </td>
            <td>
                <div class="dropdown">
                    <button class="dropbtn"><i class="fas fa-caret-square-down fa-2x"></i></button>
                    <div class="dropdown-content">
                        <a class="" href="@Url.Action("Edit", "Edit", new { id = item.Id})">Edit</a>
                        <a class="" href="@Url.Action("Details", "Details", new { id = item.Id})">Details</a>
                        <a class="" href="@Url.Action("Delete", "Delete", new { id = item.Id})">Delete</a>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
